{
  "name": "lightscript",
  "version": "0.0.1",
  "description": "A JS inspired language, with pure FP inspired semantics, and a terse, simple syntax",
  "main": "index.js",
  "scripts": {
    "start": "babel-node src/index.js",
    "repl": "babel-node src/repl.js",
    "compile": "babel-node src/compile.js",
    "lsc": "babel-node lsc.js 'app/src'",
    "build": "babel src -d dist --source-maps",
    "nearley": "nearleyc grammar/lightscript.ne -o bin/lightscript.js && babel grammar/processors -d bin/processors",
    "test-nearley": "nearleyc grammar/test.ne -o bin/lightscript.js",
    "test-grammar": "nearley-test bin/lightscript.js",
    "railroad": "nearley-railroad grammar/lightscript.ne -o bin/grammar.html"
  },
  "author": "",
  "license": "ISC",
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "node_modules",
      "dist",
      "bin",
      "grammar"
    ],
    "globals": [
      "it",
      "describe",
      "test",
      "expect",
      "beforeEach",
      "afterEach",
      "jest"
    ]
  },
  "dependencies": {
    "glob": "^7.1.6",
    "lodash": "^4.17.15",
    "moo": "^0.5.0",
    "nearley": "^2.19.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/node": "^7.10.5",
    "@babel/plugin-proposal-do-expressions": "^7.8.3",
    "@babel/plugin-proposal-partial-application": "^7.8.3",
    "@babel/plugin-proposal-pipeline-operator": "^7.8.3",
    "@babel/plugin-proposal-throw-expressions": "^7.8.3",
    "@babel/plugin-transform-modules-commonjs": "^7.10.4",
    "@babel/preset-env": "^7.11.5",
    "babel-eslint": "^11.0.0-beta.2",
    "eslint": "^6.8.0",
    "eslint-plugin-babel": "^5.3.0",
    "jest": "^24.9.0",
    "standard": "^14.3.0"
  }
}
